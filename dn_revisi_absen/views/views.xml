<odoo>
  <data>


    <record id="dn_module_name_form" model="ir.ui.view">
        <field name="name">dn.revisi.absen form</field>
        <field name="model">dn.revisi.absen</field>
        <field name="arch" type="xml">
            <form string="Revisi Absen">
            <header>
                <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,close" readonly="1"/>
            </header>
            <sheet>
                <div class="oe_title" attrs="{'invisible': [('sequence', '=', False)]}">
                    <h1><field name="sequence" readonly="1"/></h1>
                </div>
                <group>
                    <group>
                        <field name="name" invisible="1"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="employee_ids" widget="many2many_tags"/>
                    </group>
                    <group>

                    </group>
                </group>
                <notebook>
                    <page string="Line Details">
                        <field name="revisi_line_ids" >
                          <tree string="Line Detail" editable="bottom">
                              <field name="datetime" />
                              <field name="date"/>
                              <field name="attendace_status" />
                              <field name="employee_id" options="{'no_create': True, 'no_open': True}"/>

                          </tree>
                      </field>
                    </page>
                </notebook>
            </sheet>
        </form>
        </field>
    </record>

    <record model="ir.ui.view" id="dn_module_name.list">
      <field name="name">dn.revisi.absen list</field>
      <field name="model">dn.revisi.absen</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="sequence"/>
          <field name="state"/>
          <field name="date_from"/>
          <field name="date_to"/>
          <field name="employee_ids" widget="many2many_tags"/>
        </tree>
      </field>
    </record>



    <record model="ir.actions.act_window" id="dn_revisi_absen_action_window">
      <field name="name">dn.revisi.absen window</field>
      <field name="res_model">dn.revisi.absen</field>
      <field name="view_mode">tree,form</field>
    </record>

        <record id="dn_revisi_absen_action_window" model="ir.actions.act_window">
            <field name="name">Revisi Absen</field>
            <field name="res_model">dn.revisi.absen</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="help" type="html">
            </field>
        </record>

        <record id="dn_revisi_absen_action_window_list" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="dn_module_name.list"/>
            <field name="act_window_id" ref="dn_revisi_absen_action_window"/>
        </record>

        <record id="dn_revisi_absen_action_window_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="dn_module_name.form"/>
            <field name="act_window_id" ref="dn_revisi_absen_action_window"/>
        </record>

        <menuitem name="Request" id="menu_dn_revisi_absen_form" action="dn_revisi_absen_action_window"
                  parent="hr_attendance.menu_hr_attendance_manage_attendances" sequence="1" />
  </data>
</odoo>