<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <record id="view_peringatan_dua_wizard"
			model="ir.ui.view">
			<field name="name">form.peringatan.dua.wizard</field>
			<field name="model">peringatan.dua.wizard</field>
			<field name="arch" type="xml">
				<form string="Create Peringatan 2">
					<group>
						<field name="date" />
						<field name="last_payment_date" />
						<field name="bank_id" />
					</group>
					<footer>
						<button string='Create' name="create_peringatan_dua"
							type="object" class="btn-primary" />
						<button string="Cancel" class="btn-secondary"
							special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<act_window id="action_peringatan_dua_wizard"
			name="Create Peringatan 2" res_model="peringatan.dua.wizard"
			src_model="account.invoice" view_mode="form" multi="True"
			target="new" key2="client_action_multi" />

        <record id="view_peringatan_dua_form" model="ir.ui.view">
			<field name="name">Peringatan dua</field>
			<field name="model">peringatan.dua</field>
			<field name="arch" type="xml">
				<form>
					<header>
						<button name="button_validate" states="draft"
							string="Validate" type="object"
							confirm="Are you sure you want to do this?" class="oe_highlight" />

						<button name="button_cancel" states="draft,validate" string="Cancel" 
							type="object" confirm="Are you sure you want to Cancel?" />

						<field name="state" widget="statusbar"
							statusbar_visible="draft,validate,cancel"
							statusbar_colors='{"cancel":"red"}' />
					</header>
					<sheet>
						<group>
							<group>
								<field name='name' readonly="1" force_save="1" />
								<field name='date' attrs="{'readonly': [('state','!=', 'draft')]}"/>
								<field name='last_payment_date' attrs="{'readonly': [('state','!=', 'draft')]}"/>
								<field name='currency_id' invisible="1" />
							</group>
							<group>
								<field name='partner_id'
									attrs="{'readonly': [('state','!=', 'draft')]}" />
								<field name='sp_satu' options="{'no_create': True, 'no_create_edit':True}"
									attrs="{'readonly': [('state','!=', 'draft')]}" />
								<field name='bank_id'
									attrs="{'readonly': [('state','!=', 'draft')]}" />
							</group>
						</group>
						<notebook>
							<page name="peringatan_dua_line" string="invoice">
								<field name="line_ids" widget="section_and_note_one2many"
									mode="tree" attrs="{'readonly': [('state','!=', 'draft')]}"
									context="{'default_partner_id_order':partner_id}">
									<form>
										<sheet>
											<group>
												<group>
													<field name='peringatan_dua_id' invisible='1' />
													<field name='partner_id_order' readonly='1'
														force_save="1" />
													<field name='name' options="{'no_create': True, 'no_create_edit':True}"/>
													<field name='partner_id' invisible='1' />
                                                    <field name='residual' />
													<!-- <field name='amount_total' /> -->
													<field name="currency_id" invisible="1" />
												</group>
											</group>
										</sheet>
									</form>
									<tree string="Peringatan" editable="bottom">
										<field name="name" options="{'no_create': True, 'no_create_edit':True}"/>
										<field name='partner_id_order' readonly='1'
											force_save="1" />
										<field name='partner_id' invisible='1' />
										<field name='invoice_date' />
										<field name='date_due' />
										<!-- <field name='amount_total' /> -->
										<field name='residual' />
										<field name='number_delay' />
										<field name='com' />
										<field name='total' />
										<field name="currency_id" invisible="1" />
									</tree>
								</field>
							</page>
						</notebook>
						<group class="oe_subtotal_footer oe_right" colspan="2">
							<!-- <div class="oe_subtotal_footer_separator oe_inline o_td_label"> 
								<label for="amount_total"/> </div> -->
							<!-- <field name="amount_total" widget="monetary"
								options="{'currency_field': 'currency_id'}"
								class="oe_subtotal_footer_separator" /> -->
							<field name="sum_total" widget="monetary"
								options="{'currency_field': 'currency_id'}"
								class="oe_subtotal_footer_separator" />
						</group>
						<field name='amount_terbilang' invisible="1"/>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>

		<record id="view_peringatan_dua_tree" model="ir.ui.view">
			<field name="name">Peringatan dua</field>
			<field name="model">peringatan.dua</field>
			<field name="arch" type="xml">
				<tree default_order='id' decoration-info="state in ('draft')"
					decoration-muted="state in ('cancel')" string="Peringatan dua">
					<field name='name' />
					<field name='partner_id' />
					<field name='amount_total' />
					<field name='amount_due_total' />
					<field name='state' />
				</tree>
			</field>
		</record>

        <record id="act_peringatan_dua" model="ir.actions.act_window">
			<field name="name">Peringatan 2</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">peringatan.dua</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{}</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Create a new Peringatan 1
				</p>
			</field>
		</record>

        <menuitem id="menu_peringatan_dua" name="Peringatan 2"
			parent="dn_invoice_print_out.menu_peringatan" sequence='2'
			action="dn_invoice_print_out.act_peringatan_dua" />    
    </data>
</odoo>